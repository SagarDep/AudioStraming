<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kamrulhasan3288.com.audiostraming.activities.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_weight="1"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <!--<android.support.v7.widget.CardView
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="125dp">

    </android.support.v7.widget.CardView>-->



    <LinearLayout
        android:background="#455A64"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="125dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/ic_song"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/main_activity_songName"
                android:ellipsize="marquee"
                android:textColor="#fff"
                android:text="Now Playing..Chhoti chhoti raatein lambi ho jati hain..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/main_activity_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="start"
                android:id="@+id/currentDuration"
                android:text="0 min, 0 sec"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:gravity="right"
                android:text="2 min, 3sec"
                android:textColor="#fff"
                android:id="@+id/totalDuration"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/previousMusicButton"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/playMusicButton"
                android:src="@mipmap/ic_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/nextMusicButton"
                android:src="@mipmap/ic_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
